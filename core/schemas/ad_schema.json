{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AdSpec",
  "type": "object",
  "required": ["hooks", "segments", "cta", "length_seconds"],
  "properties": {
    "hooks": {"type": "string"},
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start", "end", "text"],
        "properties": {
          "start": {"type": "number", "minimum": 0},
          "end": {"type": "number", "minimum": 0},
          "text": {"type": "string"},
          "visual_cue": {"type": "string"}
        }
      }
    },
    "cta": {"type": "string"},
    "length_seconds": {"type": "number", "minimum": 1}
  },
  "additionalProperties": true
}
